import argparse

import savant.db

arg_parser = argparse.ArgumentParser( description='Set the savant DB password' )
arg_parser.add_argument(
        '-p', '--password',
        required=True,
        help='The password of the savant Neo4j database'
        )
args = arg_parser.parse_args()

if __name__ == '__main__':
    db_pass = savant.db.DBPassword()
    db_pass.set(args.password)
